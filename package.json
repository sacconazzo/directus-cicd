{
  "name": "directus-cicd",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "bootstrap": "pnpm directus bootstrap",
    "snapshot:create": "pnpm directus schema snapshot --yes ./snapshots/latest.yaml && git stage ./snapshots/latest.yaml",
    "snapshot:commit": "pnpm snapshot:create && git stage ./snapshots/latest.yaml",
    "snapshot:check": "pnpm directus schema apply --dry-run ./snapshots/latest.yaml",
    "snapshot:apply": "pnpm directus schema apply --yes ./snapshots/latest.yaml",
    "db:prepare": "pnpm bootstrap && pnpm snapshot:apply",
    "start": "pnpm directus start"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "directus": "^9.17.1",
    "mysql": "^2.18.1",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "snapshot:commit"
  ]
}